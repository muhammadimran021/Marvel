<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- SplashScreen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?android:windowBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_shield</item>
        <item name="postSplashScreenTheme">@style/Theme.Marvel</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Marvel" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="colorLoading">?colorSecondary</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Marvel.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Marvel.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Marvel.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Marvel.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Marvel.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Marvel.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Marvel.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Marvel.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Marvel.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Marvel.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Marvel.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Marvel.Caption</item>
    </style>
</resources>