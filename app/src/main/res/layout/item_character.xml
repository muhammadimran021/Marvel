<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:gravity="center"
    android:background="?selectableItemBackground"
    android:paddingHorizontal="16dp"
    android:clipToPadding="false"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_character"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@null"
            tools:src="@tools:sample/avatars"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            >

            <TextView
                android:id="@+id/txt_character_title"
                android:textAppearance="?textAppearanceHeadline5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Captain America"
                android:textColor="?colorOnPrimaryContainer"
                />

            <TextView
                android:id="@+id/txt_character_headline"
                android:textAppearance="?textAppearanceSubtitle2"
                android:textColor="?colorOnPrimaryContainer"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:alpha="0.6"
                android:text="@string/label_marvel_character"
                />

            <TextView
                android:id="@+id/btn_view_more"
                android:textAppearance="?textAppearanceButton"
                android:textColor="?colorOnPrimaryContainer"
                android:paddingVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_more_info"
                app:drawableTint="?colorOnPrimaryContainer"
                app:drawableEndCompat="@drawable/ic_arrow_right"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>